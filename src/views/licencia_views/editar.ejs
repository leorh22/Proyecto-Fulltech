<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Licencia</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="icon" href="/icons/fulltech-logo.ico" type="image/x-icon">
</head>
<body>
    <% if(data) { %>
    <div class="equipo-page">
        <div class="equipo-nuevo-form">
            <div class="close-box-equipo">
                <a href="/licencia"><span class="material-symbols-outlined" style="font-size: 35px;">close</span></a>
            </div>
            <div>
                <form action="/actualizarLicencia" method="post">
                    <input type="text" name="id_licencia" id="id_licencia" value="<%= data.id_licencia %>" hidden>
                    <div>
                        <label for="nombre">NOMBRE: <span class="required">*</span></label>
                        <input type="text" name="nombre" id="nombre" value="<%= data.nombre %>" required>
                    </div>
                    <div>
                        <label for="tipo_licencia">TIPO DE LICENCIA:</label>
                        <select name="tipo_licencia" id="tipo_licencia">
                            <option <%= data.tipo_licencia === 'FISÍCA' ? 'selected' : '' %> value="FISÍCA">FISICA</option>
                            <option <%= data.tipo_licencia === 'DIGITAL' ? 'selected' : '' %> value="DIGITAL">DIGITAL</option>
                        </select>
                    </div>
                    <div>
                        <label for="keycode">KEYCODE:</label>
                        <input type="text" name="keycode" id="keycode" value="<%= data.keycode %>" required>
                    </div>
                    <div>
                        <label for="fecha_compra">FECHA DE COMPRA:</label>
                        <input type="date" name="fecha_compra" id="fecha_compra">
                    </div>
                    <div>
                        <label for="fecha_renovacion">FECHA DE RENOVACIÓN:</label>
                        <input type="date" name="fecha_renovacion" id="fecha_renovacion">
                    </div>
                    <div>
                        <label for="proveedor">PROVEEDOR: <span class="required">*</span></label>
                        <input type="text" name="proveedor" id="proveedor" value="<%= data.proveedor %>">
                    </div>
                    <div>
                        <label for="comentario">COMENTARIO:</label>
                        <input type="text" name="comentario" id="comentario" value="<%= data.comentario %>">
                    </div>
                    <div>
                        <label for="id_equipo2">EQUIPO ASIGNADO:</label>
                        <input type="text" name="id_equipo2" id="id_equipo2" value="<%= data.id_equipo2 %>">
                    </div>
                    <div class="guardar-box-equipo">
                        <button type="submit" class="guardar-equipo">GUARDAR</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% } %>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const fechaCompra = '<%= data.fecha_compra %>';
            const fechaRenovacion = '<%= data.fecha_renovacion %>';

            const formatToYYYYMMDD = (date) => {
                const [day, month, year] = date.split('-');
                return `${year}-${month}-${day}`;
            };

            if (fechaCompra) {
                document.getElementById('fecha_compra').value = formatToYYYYMMDD(fechaCompra);
            }

            if (fechaRenovacion) {
                document.getElementById('fecha_renovacion').value = formatToYYYYMMDD(fechaRenovacion);
            }
        });
        /**/
    </script>
</body>
</html>
